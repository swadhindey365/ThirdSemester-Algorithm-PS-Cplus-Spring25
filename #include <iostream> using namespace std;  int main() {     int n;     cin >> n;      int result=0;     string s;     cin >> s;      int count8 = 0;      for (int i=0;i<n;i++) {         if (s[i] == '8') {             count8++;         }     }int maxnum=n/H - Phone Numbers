#include <iostream>
using namespace std;

int main() {
    int n;
    cin >> n;
     int result=0;
    string s;
    cin >> s;

    int count8 = 0;

    for (int i=0;i<n;i++) {
        if (s[i] == '8') {
            count8++;
        }
    }int maxnum=n/11;
    if(count8<maxnum){

         result=count8;
    }
    else{
       result=maxnum;
    }
    cout<<result;

    return 0;
}
